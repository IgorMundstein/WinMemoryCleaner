<Window x:Class="WinMemoryCleaner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WinMemoryCleaner"
        mc:Ignorable="d"
        DataContext="{Binding MainViewModel, Source={StaticResource ViewModelLocator}}"
        Title="{x:Static local:Constants+App.Title}" 
        Icon="/WinMemoryCleaner;component/Resources/Images/WinMemoryCleaner.ico" 
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize" 
        Height="256" 
        Width="600" 
        FontFamily="Calibri" 
        FontSize="16" 
        FontWeight="Light">

    <Grid Margin="5, 0, 5, 5" IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBooleanConverter}}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="210" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="30" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>

        <GroupBox Grid.Column="0" Grid.Row="0" Margin="0, 0, 2.5, 0">
            <GroupBox.Header>
                <TextBlock Text="{x:Static local:Localization.SettingsMemoryAreas}" FontWeight="Normal" />
            </GroupBox.Header>
            <StackPanel Margin="3, 5">
                <CheckBox VerticalAlignment="Center" VerticalContentAlignment="Center" IsChecked="{Binding MemoryAreas, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static local:Enums+Memory+Area.CombinedPageList}}">
                    <TextBlock Text="{x:Static local:Localization.MemoryCombinedPageList}" VerticalAlignment="Center" />
                </CheckBox>
                <CheckBox VerticalAlignment="Center" VerticalContentAlignment="Center" IsChecked="{Binding MemoryAreas, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static local:Enums+Memory+Area.ModifiedPageList}}">
                    <TextBlock Text="{x:Static local:Localization.MemoryModifiedPageList}" VerticalAlignment="Center" />
                </CheckBox>
                <CheckBox VerticalAlignment="Center" VerticalContentAlignment="Center" IsChecked="{Binding MemoryAreas, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static local:Enums+Memory+Area.ProcessesWorkingSet}}">
                    <TextBlock Text="{x:Static local:Localization.MemoryProcessesWorkingSet}" VerticalAlignment="Center" />
                </CheckBox>
                <CheckBox VerticalAlignment="Center" VerticalContentAlignment="Center" IsChecked="{Binding MemoryAreas, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static local:Enums+Memory+Area.StandbyList}}">
                    <TextBlock Text="{x:Static local:Localization.MemoryStandbyList}" VerticalAlignment="Center" />
                </CheckBox>
                <CheckBox VerticalAlignment="Center" VerticalContentAlignment="Center" IsChecked="{Binding MemoryAreas, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static local:Enums+Memory+Area.StandbyListLowPriority}}">
                    <TextBlock Text="{x:Static local:Localization.MemoryLowPriorityStandbyList}" VerticalAlignment="Center" />
                </CheckBox>
                <CheckBox VerticalAlignment="Center" VerticalContentAlignment="Center" IsChecked="{Binding MemoryAreas, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static local:Enums+Memory+Area.SystemWorkingSet}}">
                    <TextBlock Text="{x:Static local:Localization.MemorySystemWorkingSet}" VerticalAlignment="Center" />
                </CheckBox>
            </StackPanel>
        </GroupBox>

        <GroupBox Grid.Column="0" Grid.Row="1" Grid.RowSpan="2" Margin="0, 0, 2.5, 0">
            <GroupBox.Header>
                <TextBlock Text="{x:Static local:Localization.About}" FontWeight="Normal" />
            </GroupBox.Header>
            <StackPanel>
                <TextBlock Margin="3, 0, 0, 0">           
                    <Hyperlink NavigateUri="{x:Static local:Constants+App+Author.WebsiteUri}" KeyboardNavigation.IsTabStop="False" RequestNavigate="Hyperlink_RequestNavigate">
                        <TextBlock Text="{x:Static local:Constants+App+Author.Website}" />
                    </Hyperlink>
                </TextBlock>
                <TextBlock Text="{x:Static local:Constants+App.License}" TextWrapping="Wrap" Margin="3, 3, 0, 0" FontSize="14" />
            </StackPanel>
        </GroupBox>

        <GroupBox Grid.Column="1" Grid.Row="0" Margin="2.5, 0, 0, 0">
            <GroupBox.Header>
                <TextBlock Text="{x:Static local:Localization.Log}" FontWeight="Normal" />
            </GroupBox.Header>
            <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="3, 0, 0, 0">
                <ItemsControl ItemsSource="{Binding Logs}" IsTabStop="False">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Foreground="{Binding Color, Converter={StaticResource ColorToSolidColorBrushConverter}}" TextWrapping="Wrap">
                            <Run Text="[" />
                            <Run Text="{Binding Path=DateTime, StringFormat=hh:mm:ss}" />
                            <Run Text="]" />
                            <Run Text="{Binding Message}" />
                            </TextBlock>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </GroupBox>

        <TextBlock Grid.Column="1" Grid.Row="1" VerticalAlignment="Stretch" Margin="2.5, 5, 0, 5" TextAlignment="Center" FontWeight="Normal">
            <TextBlock.Text>
                <MultiBinding StringFormat="{}{0} free of {1} ({2}% Occupied)">
                    <Binding Path="Computer.Memory.Available" />
                    <Binding Path="Computer.Memory.Total" />
                    <Binding Path="Computer.Memory.Usage" />
                </MultiBinding>
            </TextBlock.Text>
        </TextBlock>

        <Button Grid.Column="1" Grid.Row="2" Content="{x:Static local:Localization.MemoryCleanUp}" ContentStringFormat="{} {0} " Foreground="Green" Cursor="Hand" Command="{Binding MemoryCleanCommand}" FontWeight="Normal" Margin="2.5, 0, 0, 1">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="3"/>
                </Style>
            </Button.Resources>
        </Button>
    </Grid>

</Window>

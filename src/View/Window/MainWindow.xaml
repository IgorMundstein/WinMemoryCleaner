<Window x:Class="WinMemoryCleaner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:WinMemoryCleaner"
        AllowsTransparency="True"
        Background="Transparent"
        BorderBrush="Transparent"
        BorderThickness="0"
        DataContext="{Binding MainViewModel, Source={StaticResource ViewModelLocator}}"
        FlowDirection="{Binding Path=(local:Localizer.Language).Direction}"
        FocusManager.FocusedElement="{Binding ElementName=Optimize}"
        Foreground="{StaticResource DarkForeground}"
        Icon="/WinMemoryCleaner;component/Resources/Images/win-memory-cleaner.ico"
        MouseDown="OnWindowMouseDown"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        SnapsToDevicePixels="True"
        Title="{x:Static local:Constants+App.Title}"
        Topmost="{Binding AlwaysOnTop}"
        UseLayoutRounding="True"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None">
    <!-- Window -->
    <Border Background="{StaticResource DarkWindowBackground}" 
            BorderBrush="{StaticResource DarkWindowBorderBrush}" 
            BorderThickness="1" 
            CornerRadius="8"
            IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBooleanConverter}}">
        <StackPanel>
            <!-- Header -->
            <Grid Margin="10, 10, 0, 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0"
                            KeyboardNavigation.TabNavigation="None"
                            Orientation="Horizontal"
                            VerticalAlignment="Center">
                    <Image RenderOptions.BitmapScalingMode="Fant"
                           RenderOptions.EdgeMode="Aliased"
                           Source="/WinMemoryCleaner;component/Resources/Images/win-memory-cleaner.ico"
                           VerticalAlignment="Center" />
                    <TextBlock FontWeight="Normal"
                               Margin="5, 0, 0, 0"
                               Text="{Binding Title}"
                               VerticalAlignment="Center" />
                </StackPanel>
                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            VerticalAlignment="Center">
                    <!-- Help Button -->
                    <Button Background="Transparent" 
                            BorderBrush="Transparent" 
                            BorderThickness="0"
                            Click="OnHelpButtonClick"
                            Content="?"
                            Cursor="Arrow"
                            FontFamily="Arial"
                            Margin="10, 0, 5, 0"
                            PreviewMouseRightButtonDown="OnHelpButtonPreviewMouseRightButtonDown"
                            ToolTip="{Binding Path=(local:Localizer.String).Help}"
                            VerticalAlignment="Center"
                            Visibility="{Binding CompactMode, Converter={StaticResource InverseBooleanToVisibilityConverter}, FallbackValue={x:Static Visibility.Visible}}">
                        <Button.Resources>
                            <ContextMenu x:Key="HelpContextMenu">
                                <MenuItem Command="{Binding NavigateUriCommand}"
                                          CommandParameter="{x:Static local:Constants+App+Repository.AboutUri}"
                                          Header="{Binding Path=(local:Localizer.String).About}">
                                    <MenuItem.Icon>
                                        <Path Width="20" Height="20" Stretch="Uniform" Fill="{StaticResource DarkForeground}"
                                              Data="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38
                                                    0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13
                                                    -.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52
                                                    .28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12
                                                    0 0 .67-.21 2.2.82a7.59 7.59 0 012-.27c.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82
                                                    .44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48
                                                    0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.013 8.013 0 0016 8c0-4.42-3.58-8-8-8z" />
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem Click="OnDonateMenuItemClick"
                                          Header="{Binding Path=(local:Localizer.String).Donate}">
                                    <MenuItem.Icon>
                                        <Path Width="20" Height="20" Stretch="Uniform" Fill="Red" Data="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41 0.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z" />
                                    </MenuItem.Icon>
                                </MenuItem>
                            </ContextMenu>
                        </Button.Resources>
                    </Button>
                    <!-- Compact Mode Button -->
                    <ToggleButton Background="Transparent"
                                  BorderBrush="Transparent"
                                  BorderThickness="0"
                                  Click="OnCompactModeButtonClick"
                                  Cursor="Arrow"
                                  IsChecked="{Binding CompactMode}"
                                  Padding="0, -3, 0, 0"
                                  VerticalAlignment="Center">
                        <Grid Background="Transparent"                              
                              Margin="10, 3, 10, 0"
                              VerticalAlignment="Center">
                            <Path Data="{Binding Tag, RelativeSource={RelativeSource AncestorType={x:Type ToggleButton}, Mode=FindAncestor}}"
                                  Height="12"
                                  HorizontalAlignment="Center"
                                  Stretch="Uniform"
                                  Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType={x:Type ToggleButton}, Mode=FindAncestor}}"
                                  StrokeThickness="2"
                                  VerticalAlignment="Center"
                                  Width="14" />
                        </Grid>
                        <ToggleButton.Resources>
                            <Style TargetType="{x:Type ToggleButton}" BasedOn="{StaticResource {x:Type ToggleButton}}">
                                <Style.Triggers>
                                    <Trigger Property="IsChecked" Value="True">
                                        <Setter Property="Tag" Value="M 0.5 0 L 5.5 5 L 10.5 0" />
                                        <Setter Property="ToolTip" Value="{Binding Path=(local:Localizer.String).Expand}" />
                                    </Trigger>
                                    <Trigger Property="IsChecked" Value="False">
                                        <Setter Property="Tag" Value="M 0.5 5 L 5.5 0 L 10.5 5" />
                                        <Setter Property="ToolTip" Value="{Binding Path=(local:Localizer.String).Collapse}" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ToggleButton.Resources>
                    </ToggleButton>
                    <!-- Minimize Button -->
                    <Button Background="Transparent" 
                            BorderBrush="Transparent" 
                            BorderThickness="0"
                            Click="OnMinimizeButtonClick"
                            Cursor="Arrow"
                            Padding="0, -3, 0, 0"
                            ToolTip="{Binding Path=(local:Localizer.String).Minimize}"
                            VerticalAlignment="Center">
                        <Grid Background="Transparent"
                              Height="12"
                              Margin="10, 3, 10, 0"                              
                              VerticalAlignment="Center">
                            <Path Data="M9,0 L8,1 8,1 8,1 0,1 0,1 z"
                                  HorizontalAlignment="Center"
                                  Stretch="None"
                                  Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType={x:Type Button}, Mode=FindAncestor}}"
                                  StrokeThickness="3"
                                  VerticalAlignment="Center"
                                  Width="9" />
                        </Grid>
                    </Button>
                    <!-- Close Button -->
                    <Button Background="Transparent" 
                            BorderBrush="Transparent" 
                            BorderThickness="0"
                            Click="OnCloseButtonClick"
                            Cursor="Arrow"
                            Padding="0, -3, 0, 0"
                            ToolTip="{Binding Path=(local:Localizer.String).Close}"
                            VerticalAlignment="Center">
                        <Grid Background="Transparent"
                              Height="12"
                              Margin="10, 3, 10, 0"
                              VerticalAlignment="Center">
                            <Path Data="M0,0 L1,1 M0,1 L1,0"
                                  Height="10"
                                  HorizontalAlignment="Center"
                                  Stretch="Uniform"
                                  Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType={x:Type Button}, Mode=FindAncestor}}"
                                  StrokeThickness="2"
                                  VerticalAlignment="Center"
                                  Width="10" />
                        </Grid>
                    </Button>
                </StackPanel>
            </Grid>
            <!-- Content -->
            <Grid Margin="10, 0, 10, 0"
                  Visibility="{Binding CompactMode, Converter={StaticResource InverseBooleanToVisibilityConverter}, FallbackValue={x:Static Visibility.Visible}}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <!-- Settings -->
                <GroupBox Grid.Column="0"
                          Grid.Row="0"
                          Header="{Binding Path=(local:Localizer.String).Settings}"
                          Margin="0, 5, 5, 0"
                          x:Name="SettingsGroupBox">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal"
                                    Margin="0, 0, 0, 6">
                            <TextBlock FontSize="14"
                                       Margin="-2, 0, 2, 0"
                                       Text="🌐"
                                       VerticalAlignment="Center" />
                            <ComboBox ItemsSource="{x:Static local:Localizer.Languages}"
                                      MouseRightButtonUp="OnComboBoxMouseRightButtonUp"
                                      SelectedValue="{Binding Language}"
                                      VerticalContentAlignment="Center" />
                        </StackPanel>
                        <ItemsControl ItemsSource="{Binding SettingItems}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <CheckBox Content="{Binding Name}"
                                              IsChecked="{Binding Value, Mode=TwoWay}"
                                              IsEnabled="{Binding IsEnabled}"
                                              Margin="0, 0, 0, 3" />
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </GroupBox>
                <!-- Memory Areas -->
                <GroupBox Grid.Column="0" 
                          Grid.Row="1"
                          Header="{Binding Path=(local:Localizer.String).MemoryAreas}"
                          Margin="0, 5, 5, 0"
                          x:Name="MemoryAreasGroupBox">
                    <ItemsControl ItemsSource="{Binding MemoryAreaItems}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <CheckBox Content="{Binding Name}"
                                          IsChecked="{Binding Value, Mode=TwoWay}"
                                          IsEnabled="{Binding IsEnabled}"
                                          Margin="0, 0, 0, 3" />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </GroupBox>
                <!-- Process Exclusion List | Auto Optimization | Optimization Hotkey | Tray Icon -->
                <Grid Grid.Column="1"
                      Grid.Row="0"
                      Grid.RowSpan="2">
                    <Grid.MaxHeight>
                        <MultiBinding Converter="{StaticResource SumNumericConverter}">
                            <Binding ElementName="SettingsGroupBox" Path="ActualHeight" />
                            <Binding ElementName="MemoryAreasGroupBox" Path="ActualHeight" />
                        </MultiBinding>
                    </Grid.MaxHeight>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <!-- Process Exclusion List -->
                    <GroupBox Grid.Column="0"
                              Grid.Row="0"
                              Header="{Binding Path=(local:Localizer.String).ProcessExclusionList}"
                              Margin="5, 0, 0, 0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <ScrollViewer Focusable="False"
                                          Grid.Column="0"
                                          Grid.ColumnSpan="2"
                                          Grid.Row="0"
                                          Margin="0"
                                          VerticalScrollBarVisibility="Auto">
                                <ItemsControl ItemsSource="{Binding ProcessExclusionList}"
                                              Name="ProcessExclusionList">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Grid HorizontalAlignment="Stretch" 
                                                  Margin="0, 0, 5, 0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto" />
                                                </Grid.RowDefinitions>
                                                <Button Content="-"
                                                        Command="{Binding MainViewModel.RemoveProcessFromExclusionListCommand, Source={StaticResource ViewModelLocator}}"
                                                        CommandParameter="{Binding}"
                                                        Grid.Column="0"
                                                        Padding="5, -3, 5, 0"
                                                        Margin="0, 2.5, 0, 2.5"
                                                        ToolTip="{Binding Path=(local:Localizer.String).Remove}" />
                                                <Label Content="{Binding}"
                                                       Grid.Column="1" 
                                                       Margin="5, 0, 0, 0" />
                                            </Grid>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                            <ComboBox DropDownOpened="OnProcessesDropDownOpened"
                                      Grid.Column="0"
                                      Grid.Row="1"
                                      ItemsSource="{Binding Processes}" 
                                      Margin="0, 5, 0, 0"
                                      MouseRightButtonUp="OnComboBoxMouseRightButtonUp"
                                      Name="Processes"
                                      SelectedValue="{Binding SelectedProcess}"
                                      VerticalContentAlignment="Center" />
                            <Button Content="+"
                                    Command="{Binding AddProcessToExclusionListCommand}"
                                    CommandParameter="{Binding ElementName=Processes, Path=Text}"
                                    Grid.Column="1"
                                    Grid.Row="1"
                                    Margin="5, 5, 0, 0"
                                    Padding="7, 0, 7, 0"
                                    ToolTip="{Binding Path=(local:Localizer.String).Add}" />
                        </Grid>
                    </GroupBox>
                    <!-- Auto Optimization -->
                    <GroupBox Grid.Column="0"
                              Grid.Row="1"
                              Header="{Binding Path=(local:Localizer.String).AutoOptimization}"
                              Margin="5, 5, 0, 0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <StackPanel Grid.Row="0">
                                <TextBlock Text="{Binding AutoOptimizationMemoryIntervalDescription}" />
                                <Slider Margin="0, 10, 0, 9"
                                        Maximum="168"
                                        Minimum="0"
                                        Name="AutoOptimizationInterval" 
                                        PreviewKeyDown="OnSliderPreviewKeyDown"
                                        Value="{Binding AutoOptimizationInterval}" />
                            </StackPanel>
                            <StackPanel Grid.Row="1">
                                <TextBlock Text="{Binding AutoOptimizationMemoryUsageDescription}" />
                                <Slider Margin="0, 10, 0, 0"
                                        Maximum="100"
                                        Minimum="0"
                                        Name="AutoOptimizationMemoryUsage"
                                        PreviewKeyDown="OnSliderPreviewKeyDown"
                                        ToolTip="{Binding AutoOptimizationMemoryUsageWarning}"
                                        Value="{Binding AutoOptimizationMemoryUsage}" />
                            </StackPanel>
                        </Grid>
                    </GroupBox>
                    <!-- Optimization Hotkey -->
                    <GroupBox Grid.Column="0"
                              Grid.Row="2"
                              Header="{Binding Path=(local:Localizer.String).OptimizationHotkey}"
                              Margin="5, 5, 0, 0"
                              Visibility="{Binding Computer.OperatingSystem.HasHotkeyManager, Converter={StaticResource BooleanToVisibilityConverter}, FallbackValue={x:Static Visibility.Collapsed}}">
                        <StackPanel Orientation="Horizontal"
                                    VerticalAlignment="Center">
                            <CheckBox IsChecked="{Binding UseHotkey}"
                                      ToolTip="{Binding Path=(local:Localizer.String).UseHotkey}" />
                            <ComboBox DisplayMemberPath="Value"
                                      IsEnabled="{Binding UseHotkey}"
                                      ItemsSource="{Binding KeyboardModifiers}"
                                      MouseRightButtonUp="OnComboBoxMouseRightButtonUp"
                                      SelectedValue="{Binding OptimizationModifiers}"
                                      SelectedValuePath="Key"
                                      VerticalContentAlignment="Center" />
                            <TextBlock IsEnabled="{Binding UseHotkey}"
                                       IsHitTestVisible="False" 
                                       Margin="5, 0, 5, 0"
                                       Text="+" 
                                       VerticalAlignment="Center" />
                            <ComboBox IsEnabled="{Binding UseHotkey}"
                                      ItemsSource="{Binding KeyboardKeys}"
                                      MouseRightButtonUp="OnComboBoxMouseRightButtonUp"
                                      SelectedValue="{Binding OptimizationKey}"
                                      VerticalContentAlignment="Center" />
                            <TextBlock Foreground="{StaticResource DarkDisabled}"
                                       IsEnabled="{Binding UseHotkey}"
                                       KeyboardNavigation.TabNavigation="None"
                                       Margin="5, 0, 0, 0"
                                       Text="{Binding Path=(local:Localizer.String).Invalid}" 
                                       VerticalAlignment="Center"
                                       Visibility="{Binding IsOptimizationKeyValid, Converter={StaticResource InverseBooleanToVisibilityConverter}, FallbackValue={x:Static Visibility.Collapsed}}" />
                        </StackPanel>
                    </GroupBox>
                    <!-- Tray Icon -->
                    <GroupBox Grid.Column="0"
                              Grid.Row="3"
                              Header="{Binding Path=(local:Localizer.String).TrayIcon}"
                              Margin="5, 5, 0, -5">
                        <StackPanel Orientation="Horizontal"
                                    VerticalAlignment="Center">
                            <RadioButton Content="{Binding Path=(local:Localizer.String).Image}" 
                                     GroupName="TrayIcon" 
                                     IsChecked="{Binding TrayIcon, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static local:Enums+Icon+Tray.Image}}" />
                            <RadioButton Content="{Binding Path=(local:Localizer.String).MemoryUsage}" 
                                     GroupName="TrayIcon" 
                                     IsChecked="{Binding TrayIcon, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static local:Enums+Icon+Tray.MemoryUsage}}"
                                     Margin="10, 0, 0, 0" />
                        </StackPanel>
                    </GroupBox>
                </Grid>
            </Grid>
            <!-- Footer -->
            <Grid Margin="10, 0, 10, 10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <!-- Memory Stats -->
                <GroupBox Grid.Column="0"
                          Grid.Row="0"
                          Header="{Binding PhysicalMemoryHeader}"
                          KeyboardNavigation.TabNavigation="None"
                          Margin="0, 5, 0, 0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <ProgressBar BorderThickness="0"
                                     Grid.Column="0" 
                                     Grid.ColumnSpan="5"
                                     Grid.Row="0"
                                     Height="5" 
                                     Maximum="100" 
                                     Margin="0, 0, 0, 5"
                                     Minimum="0" 
                                     Value="{Binding Computer.Memory.Physical.Used.Percentage}">
                            <ProgressBar.Template>
                                <ControlTemplate>
                                    <Grid>
                                        <Border Background="{StaticResource DarkMemoryBarTrackBackground}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="3"
                                                Name="PART_Track" />
                                        <Border Background="{StaticResource DarkMemoryBarIndicatorBackground}" 
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="3"
                                                HorizontalAlignment="Left"
                                                Name="PART_Indicator" />
                                    </Grid>
                                </ControlTemplate>
                            </ProgressBar.Template>
                        </ProgressBar>
                        <Border Background="{StaticResource DarkMemoryBarIndicatorBackground}" 
                                BorderThickness="0" 
                                CornerRadius="3"
                                Grid.Column="0"
                                Grid.Row="1"
                                Height="12" 
                                Margin="0, 0, 5, 0"
                                Width="12" />
                        <StackPanel Grid.Column="1"
                                    Grid.Row="1"
                                    Orientation="Horizontal">
                            <TextBlock Text="{Binding Path=(local:Localizer.String).Used}" />
                            <TextBlock Text=" | " />
                            <TextBlock Text="{Binding Computer.Memory.Physical.Used.Value, Converter={StaticResource StringFormatConverter}, ConverterParameter={}{0:0.#}}" />
                            <TextBlock Text=" " />
                            <TextBlock Text="{Binding Computer.Memory.Physical.Used.Unit}" />
                            <TextBlock Text=" (" />
                            <TextBlock Text="{Binding Computer.Memory.Physical.Used.Percentage}" />
                            <TextBlock Text="%)" />
                        </StackPanel>
                        <Border Background="{StaticResource DarkMemoryBarTrackBackground}" 
                                BorderThickness="0" 
                                CornerRadius="3" 
                                Grid.Column="3"
                                Grid.Row="1"
                                Height="12" 
                                Margin="20, 0, 5, 0"
                                Width="12" />
                        <StackPanel Grid.Column="4"
                                    Grid.Row="1"
                                    Orientation="Horizontal">
                            <TextBlock Text="{Binding Path=(local:Localizer.String).Free}" />
                            <TextBlock Text=" | " />
                            <TextBlock Text="{Binding Computer.Memory.Physical.Free.Value, Converter={StaticResource StringFormatConverter}, ConverterParameter={}{0:0.#}}" />
                            <TextBlock Text=" " />
                            <TextBlock Text="{Binding Computer.Memory.Physical.Free.Unit}" />
                            <TextBlock Text=" (" />
                            <TextBlock Text="{Binding Computer.Memory.Physical.Free.Percentage}" />
                            <TextBlock Text="%)" />
                        </StackPanel>
                    </Grid>
                </GroupBox>
                <GroupBox Grid.Column="0"
                          Grid.Row="1"
                          Header="{Binding VirtualMemoryHeader}"
                          KeyboardNavigation.TabNavigation="None"
                          Margin="0, 5, 0, 0"
                          Visibility="{Binding ShowVirtualMemory, Converter={StaticResource BooleanToVisibilityConverter}, FallbackValue={x:Static Visibility.Collapsed}}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <ProgressBar BorderThickness="0"
                                     Grid.Column="0" 
                                     Grid.ColumnSpan="5"
                                     Grid.Row="0"
                                     Height="5" 
                                     Maximum="100" 
                                     Margin="0, 0, 0, 5"
                                     Minimum="0" 
                                     Value="{Binding Computer.Memory.Virtual.Used.Percentage}">
                            <ProgressBar.Template>
                                <ControlTemplate>
                                    <Grid>
                                        <Border Background="{StaticResource DarkMemoryBarTrackBackground}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="3"
                                                Name="PART_Track" />
                                        <Border Background="{StaticResource DarkMemoryBarIndicatorBackground}" 
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="3"
                                                HorizontalAlignment="Left"
                                                Name="PART_Indicator" />
                                    </Grid>
                                </ControlTemplate>
                            </ProgressBar.Template>
                        </ProgressBar>
                        <Border Background="{StaticResource DarkMemoryBarIndicatorBackground}" 
                                BorderThickness="0" 
                                CornerRadius="3"
                                Grid.Column="0"
                                Grid.Row="1"
                                Height="12" 
                                Margin="0, 0, 5, 0"
                                Width="12" />
                        <StackPanel Grid.Column="1"
                                    Grid.Row="1"
                                    Orientation="Horizontal">
                            <TextBlock Text="{Binding Path=(local:Localizer.String).Used}" />
                            <TextBlock Text=" | " />
                            <TextBlock Text="{Binding Computer.Memory.Virtual.Used.Value, Converter={StaticResource StringFormatConverter}, ConverterParameter={}{0:0.#}}" />
                            <TextBlock Text=" " />
                            <TextBlock Text="{Binding Computer.Memory.Virtual.Used.Unit}" />
                            <TextBlock Text=" (" />
                            <TextBlock Text="{Binding Computer.Memory.Virtual.Used.Percentage}" />
                            <TextBlock Text="%)" />
                        </StackPanel>
                        <Border Background="{StaticResource DarkMemoryBarTrackBackground}" 
                                BorderThickness="0" 
                                CornerRadius="3" 
                                Grid.Column="3"
                                Grid.Row="1"
                                Height="12" 
                                Margin="20, 0, 5, 0"
                                Width="12" />
                        <StackPanel Grid.Column="4"
                                    Grid.Row="1"
                                    Orientation="Horizontal">
                            <TextBlock Text="{Binding Path=(local:Localizer.String).Free}" />
                            <TextBlock Text=" | " />
                            <TextBlock Text="{Binding Computer.Memory.Virtual.Free.Value, Converter={StaticResource StringFormatConverter}, ConverterParameter={}{0:0.#}}" />
                            <TextBlock Text=" " />
                            <TextBlock Text="{Binding Computer.Memory.Virtual.Free.Unit}" />
                            <TextBlock Text=" (" />
                            <TextBlock Text="{Binding Computer.Memory.Virtual.Free.Percentage}" />
                            <TextBlock Text="%)" />
                        </StackPanel>
                    </Grid>
                </GroupBox>
                <!-- Optimize -->
                <Button Command="{Binding OptimizeCommand}" 
                        Content="{Binding Path=(local:Localizer.String).Optimize}" 
                        Grid.Column="0"
                        Grid.Row="2"
                        KeyboardNavigation.TabIndex="0"
                        Margin="0, 10, 0, 0"
                        Name="Optimize"
                        Padding="10, 5, 10, 5"
                        TabIndex="0" />
                <Grid Grid.Column="0"
                      Grid.Row="2"
                      Height="Auto"
                      Margin="0, 10, 0, 0"
                      Visibility="{Binding IsOptimizationRunning, Converter={StaticResource BooleanToVisibilityConverter}, FallbackValue={x:Static Visibility.Hidden}}">
                    <ProgressBar BorderBrush="{StaticResource DarkBorderBrush}"
                                 BorderThickness="1"
                                 FontWeight="Normal"
                                 HorizontalContentAlignment="Center"
                                 Maximum="{Binding OptimizationProgressTotal}"
                                 Minimum="0"
                                 Value="{Binding OptimizationProgressValue}"
                                 VerticalContentAlignment="Center">
                        <ProgressBar.Template>
                            <ControlTemplate>
                                <Grid>
                                    <Border Background="{StaticResource DarkBackground}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="3"
                                            Name="PART_Track" />
                                    <Border Background="{StaticResource DarkOver}" 
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="3"
                                            HorizontalAlignment="Left"
                                            Name="PART_Indicator" />
                                </Grid>
                            </ControlTemplate>
                        </ProgressBar.Template>
                    </ProgressBar>
                    <TextBlock FontWeight="Normal"
                               Foreground="{StaticResource DarkForeground}"
                               HorizontalAlignment="Left"
                               Margin="10, 0, 5, 0"
                               Text="{Binding OptimizationProgressStep}"
                               VerticalAlignment="Center" />
                    <StackPanel HorizontalAlignment="Right"
                                Orientation="Horizontal"
                                Margin="5, 0, 10, 0"
                                VerticalAlignment="Center">
                        <TextBlock FontWeight="Normal" Foreground="{StaticResource DarkForeground}" Text="{Binding OptimizationProgressValue}" />
                        <TextBlock FontWeight="Normal" Foreground="{StaticResource DarkForeground}" Text=" / " />
                        <TextBlock FontWeight="Normal" Foreground="{StaticResource DarkForeground}" Text="{Binding OptimizationProgressTotal}" />
                        <TextBlock FontWeight="Normal" Foreground="{StaticResource DarkForeground}" Text=" (" />
                        <TextBlock FontWeight="Normal" Foreground="{StaticResource DarkForeground}" Text="{Binding OptimizationProgressPercentage}" />
                        <TextBlock FontWeight="Normal" Foreground="{StaticResource DarkForeground}" Text="%)" />
                    </StackPanel>
                </Grid>
            </Grid>
        </StackPanel>
    </Border>
</Window>